---
import Section from "../Section.astro"

import { certificates } from "@cv"
import Language from '@/icons/Language.astro'
---

<Section title="Certificates">
  <ul>
    {
      certificates.map(({ issuer, name, result, url, date }) => {
       

        return (
          <li>
            <article>
              <header>
                
                <a href={url} target="_blank">
                  {name === 'English Certificate' && (
                  <div>
                    <Language />
                    </div>
                ) }

                  <h3><span class="issuer">{issuer}</span> {name} - {result}</h3>
                </a>

                <time>{date}</time>
              </header>

              
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  a {
    display: flex;
    gap: 6px;
  }

  .issuer {
    font-weight: bold;
  }



  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
